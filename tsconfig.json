{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "pages": [
                "src/pages/"
            ],
            "atoms": [
                "src/atoms/"
            ],
            "molecules": [
                "src/molecules/"
            ],
            "organisms": [
                "src/organisms/"
            ],
            "utils/*": [
                "src/utils/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}